<%if post.errors.messages.any?%>
<ul>
      <%post.errors.full_messages.each do |msg|%>
      <li>
            <%=msg%>
      </li>
      <%end%>
</ul>
<%end%>
<div class="row row_box ">
      <div class="col-12"></div>
      <%= form_for post do |p| %>
     
      <div class="add_title col-12">
            <%=p.label :title%>
            <%=p.text_field :title%>
      </div>
      <div class="post_status col-12" style="left: 10%;">
          <%= p.radio_button(:status, :publish,:checked => true) %>
          <%= label_tag(:post_status, "發表") %>
          <%= p.radio_button(:status, :draft) %>
          <%= label_tag(:post_status, "草稿") %>
      </div>
      <div class="row col-12 row_content">
            <div class="col-1"></div>
            <div class="add_post col-9 ">
                  <%=p.rich_text_area :content,rows: 15%>
            </div>
            <div class="col-2"></div>
      </div>
      <div class="post_submit col-12">
            <%=p.submit%>
      </div>
      <%end%>
      <p><%=link_to "返  回",root_path,class:"show_back"%></p>
</div>




